<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:collection ="clr-namespace:System.Collections;assembly=mscorlib"
                    xmlns:system ="clr-namespace:System;assembly=mscorlib"
                    >
    <collection:ArrayList x:Key="fontType">
        <system:String>Arial</system:String>
        <system:String>Times New Roman</system:String>
        <system:String>Verdana</system:String>
    </collection:ArrayList>
    <collection:ArrayList x:Key="fontSize">
        <system:Double>12</system:Double>
        <system:Double>16</system:Double>
        <system:Double>20</system:Double>
        <system:Double>24</system:Double>
        <system:Double>28</system:Double>
        <system:Double>32</system:Double>
    </collection:ArrayList>
</ResourceDictionary>